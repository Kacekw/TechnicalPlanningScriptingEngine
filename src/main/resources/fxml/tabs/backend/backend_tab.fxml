<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="tpse.gui_controller.backend_tab.BackendTabController">
   <children>
      <BorderPane prefHeight="441.0" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="connectToSapButton" mnemonicParsing="false" onAction="#populateListOfSapWindows"
                          text="Connect to SAP"/>
                  <Region HBox.hgrow="ALWAYS"/>
               </children>
               <opaqueInsets>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
               </opaqueInsets>
               <BorderPane.margin>
                  <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
               </BorderPane.margin>
            </HBox>
         </top>
         <left>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <ListView fx:id="backendListView" onMouseClicked="#sessionsListOnMouseClick" VBox.vgrow="ALWAYS"/>
                  <ImageView fx:id="imagePreview" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS"/>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </children>
</AnchorPane>
